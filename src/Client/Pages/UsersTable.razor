@page "/"
@inject IUserModelService UserModelService;
@inject NavigationManager NavigationManager;

<h3 class="mb-5" style="text-align: center">User Table</h3>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in UserModelService.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Age</td>
                <td>@user.Gender</td>
                <td>
                    <button class="btn btn-primary" @onclick="() => ShowUser(user.Id)"><i class="oi oi-pencil"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="button" class="btn btn-success" @onclick="CreateUser"><i class="oi oi-plus"></i></button> 

@code {
    protected override async Task OnInitializedAsync()
    {
        await UserModelService.GetUsers();
    }

    void ShowUser(int id)
    {
        NavigationManager.NavigateTo($"userform/{id}");
    }

    void CreateUser()
    {
        NavigationManager.NavigateTo("/userform");
    }

}
